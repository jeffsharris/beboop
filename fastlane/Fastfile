default_platform(:ios)

platform :ios do
  desc "Build and upload a TestFlight build"
  lane :beta do
    setup_ci

    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_P8"],
      is_key_content_base64: true
    )

    match(
      type: "appstore",
      readonly: true
    )

    profile_mapping = lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING] || {}
    profile_mapping = profile_mapping.transform_keys(&:to_s)
    profile_name = profile_mapping["com.jeffharris.beboop"]

    build_number = ENV["GITHUB_RUN_NUMBER"] || Time.now.to_i.to_s
    increment_build_number(
      build_number: build_number,
      xcodeproj: "Beboop.xcodeproj"
    )

    team_id = ENV["TEAM_ID"]
    xcargs_parts = []
    xcargs_parts << "DEVELOPMENT_TEAM=#{team_id}" if team_id && !team_id.empty?
    xcargs_parts << "PROVISIONING_PROFILE_SPECIFIER='#{profile_name}'" if profile_name && !profile_name.empty?
    xcargs_parts << "CODE_SIGN_IDENTITY=Apple Distribution"
    xcargs = xcargs_parts.join(" ")

    build_app(
      scheme: "Beboop",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: profile_mapping
      },
      xcargs: xcargs
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
